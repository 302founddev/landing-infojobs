---
export interface Props {
  backgroundColor: string;
  emoji: string;
  title: string;
  description: string;
  size?: string;
}

const {
  backgroundColor = 'bg-gradient-to-r from-green-300 to-blue-500',
  emoji = '⭐',
  title = 'Título por defecto',
  description = 'Descripción por defecto',
  size = 'w-64 h-64'
} = Astro.props;
---

<div class={`custom-card relative ${backgroundColor} ${size} p-6 rounded-lg shadow-lg`}>
  <div class="text-4xl mb-4">
    {emoji}
  </div>
  <h2 class="text-xl font-semibold mb-2">
    {title}
  </h2>
  <p class="text-gray-700 text-sm">
    {description}
  </p>
</div>

<style>
.custom-card {
  position: absolute;
  width: 600.06px;
  height: 629.73px;
  left: 0px;
  top: 0.5px;
  background: linear-gradient(144.84deg, #FDECBE 2.38%, #FFF7E4 95.89%);
  border-radius: 20px; /* Bordes redondeados */
  clip-path: polygon(0% 0%, 80% 0%, 100% 20%, 100% 100%, 0% 100%);
  transition: transform 0.3s ease-in-out;
}

.custom-card:hover {
  transform: scale(1.05);
}
</style>
