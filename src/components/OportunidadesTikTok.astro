---
import SectionContainer from "@components/SectionContainer.astro";
const cardsOportunidades = [
  {
    title1: "Oferta de empleo",
    title2: "Miles de oportunidades",
    img: "./images/ofertaEmpleo.png",
    gradient: "bg-gradient-to-t from-[#8BCFAD] to-[#E6F6EE]",
  },
  {
    title1: "InfoJobs en TikTok",
    title2: "Consejos para encontrar trabajo",
    img: "./images/infoTikTok.png",
    gradient: "bg-gradient-to-t from-[#FFE4A2] to-[#FEF6DB]",
  },
] as const;
---

<div class="grid grid-cols-1 md:grid-cols-2 w-auto h-auto gap-6 md:gap-[40px]">
  {
    cardsOportunidades.map((card) => (
      <div
        class={`flex flex-col rounded-[16px] md:px-[60px] md:pt-[40px] w-auto h-auto overflow-hidden ${card.gradient}`}
      >
        <p class="mt-4 text-lg font-semibold text-gray-900">{card.title1}</p>
        <p class="mt-2 text-[36px] font-semibold text-[#0E8247] l">
          {card.title2}
        </p>
        <div class="flex justify-center mt-auto w-full h-auto">
          <img
            class="md:w-[500px] md:h-[396px] w-full h-full secale-100"
            src={card.img}
            alt="InfoJobs"
          />
        </div>
      </div>
    ))
  }
</div>
